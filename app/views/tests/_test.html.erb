<article class="card mt-3 mb-4">
  <div class="card-body">
    <h4><%= test.title %></h4>

    <section class="card-text">

      <small>Number of questions: <%= test.questions.count %></small><br/>
      <small>Category: <%= test.category.title %></small>
      <p class="my-2">
        level: <%= test.level %>
      </p>
    </section>

    <%= link_to 'Show', test_path(test), class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_test_path(test), class: 'btn btn-secondary' %>
    <%= link_to 'Destroy', test_path(test), class: 'btn btn-danger',
                data: {method: :delete, confirm: 'Are you sure?'} %>
  </div>
</article>