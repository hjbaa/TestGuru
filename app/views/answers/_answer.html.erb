<article class="card mt-3 mb-4">
  <div class="card-body">
    <h4><%= answer.content %></h4>

    <div class="btn-group btn-group-md" role="group">
      <%= link_to 'Show', answer_path(answer), class: 'btn btn-outline-primary' %>
      <%= link_to 'Edit', edit_answer_path(answer), class: 'btn btn-outline-secondary' %>
      <%= link_to 'Destroy', answer_path(answer), class: 'btn btn-outline-danger',
                  data: {method: :delete, confirm: 'Are you sure?'} %>
    </div>
  </div>
</article>
