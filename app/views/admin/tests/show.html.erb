<h1 class="mb-4">Test: <%= @test.title %></h1>

<% if @test.questions.any? %>
  <h3 class="mb-3">Questions</h3>
<% end %>

<div class="btn-group btn-group-md mb-2" role="group">
  <%= link_to 'New question', new_admin_test_question_path(@test), class: 'btn btn-outline-primary' %>
  <%= link_to 'Edit test', edit_admin_test_path(@test), class: 'btn btn-outline-secondary' %>
</div>


<div class="mb-4">
  <% if @test.questions.any? %>
    <%= render @test.questions %>
  <% else %>
    <div class="alert alert-danger" role="alert">
      There are no questions for this test yet!
    </div>
  <% end %>
</div>

<%= link_to 'Back', admin_tests_path, class: 'btn btn-outline-primary btn-md mb-4' %>
