<h1 class="mb-4">All gists</h1>

<% if @gists.present? %>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th scope="col">Question</th>
      <th scope="col">Gist URL</th>
      <th scope="col">Creator email</th>
      <th scope="col">Created at</th>
    </tr>
    </thead>
    <tbody>
    <%= render @gists %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">
    <h3 class="mb-4">There are no gists created yet!</h3>
  </div>
<% end %>
