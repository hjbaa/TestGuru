<%= render 'shared/errors', object: @answer %>

<%= form_with model: [:admin, @question, @answer] do |f| %>
  <div class="mb-3 row justify-content-center align-items-center">
    <div class="col-sm-2 col-form-label">
      <%= f.label :content %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :content, placeholder: 'Lorem ipsum', class: 'form-control' %>
    </div>

    <div class="col-sm-2 col-form-label">
      <%= f.label :correct %>
    </div>

    <div class="col-sm-10">
      <%= f.check_box :correct, class: 'form-check-input' %>
    </div>
  </div>

  <%= f.submit "Submit answer!", class: 'btn btn-outline-primary btn-md mb-4' %>
<% end %>
