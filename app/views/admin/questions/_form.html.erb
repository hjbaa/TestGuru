<h2><%= question_header(@question) %></h2>

<%= render 'shared/errors', object: @question %>

<%= form_with model: [:admin, @test, @question] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :title %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit question!", class: 'btn btn-outline-primary btn-md mb-4' %>
<% end %>
