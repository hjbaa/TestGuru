<h2 class="mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3 row">
    <div class="col-sm-3 col-form-label">
      <%= f.label :name %>
    </div>

    <div class="col-sm-9">
      <%= f.text_field :name, placeholder: 'John', class: 'form-control form-control-md' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-3 col-form-label">
      <%= f.label :surname %>
    </div>

    <div class="col-sm-9">
      <%= f.text_field :surname, placeholder: 'Snow', class: 'form-control form-control-md' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-3 col-form-label">
      <%= f.label :email %>
    </div>

    <div class="col-sm-9">
      <%= f.email_field :email, placeholder: 'example@example.com', class: 'form-control form-control-md' %>
    </div>
  </div>


  <div class="mb-3 row">
    <div class="col-sm-3 col-form-label">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="col-sm-9">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-md' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-3 col-form-label">
      <%= f.label :password_confirmation %>
    </div>

    <div class="col-sm-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-md' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Register!', class: 'btn btn-outline-primary btn-lg mb-4' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
